<h1>Forgot your password?</h1>

<%= form_with url: password_reset_path, data: { turbo: false } do |f| %>
    <div class='mb-3'>
        <%= f.label :email %>
        <%= f.text_field :email, class:'form-control', placeholder: 'user@test.com' %>
    </div>

    <div class="mb-3">
        <%= f.submit 'Reset Password', class: 'btn btn-primary' %>
    </div>
<% end %>